							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tasks?due_date_from=2025-12-01&due_date_to=2025-12-31",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"tasks"
							],
							"query": [
								{
									"key": "due_date_from",
									"value": "2025-12-01"
								},
								{
									"key": "due_date_to",
									"value": "2025-12-31"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Tasks - Filter by Assigned User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tasks?assigned_to=3",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"tasks"
							],
							"query": [
								{
									"key": "assigned_to",
									"value": "3"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Create Task (Manager Only)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"task title test\",\n    \"description\": \"task description test\",\n    \"due_date\": \"2025-12-15\",\n    \"assigned_to\": 3\n}"
						},
						"url": {
							"raw": "{{base_url}}/tasks",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"tasks"
							]
						}
					},
					"response": []
