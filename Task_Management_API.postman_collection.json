						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"task title test with dependencies\",\n    \"description\": \"task description test with dependencies\",\n    \"due_date\": \"2025-12-20\",\n    \"assigned_to\": 4,\n    \"dependencies\": [1, 2]\n}"
						},
						"url": {
							"raw": "{{base_url}}/tasks",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"tasks"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Task by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tasks/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"tasks",
								"1"
							]
						}
					},
					"response": []
				},
				{
					"name": "Update Task (Manager)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated Task Title\",\n    \"description\": \"Updated task description\",\n    \"status\": \"completed\",\n    \"due_date\": \"2025-12-18\",\n    \"assigned_to\": 4\n}"
						},
						"url": {
							"raw": "{{base_url}}/tasks/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"tasks",
								"1"
							]
						}
					},
					"response": []
