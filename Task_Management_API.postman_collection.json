					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tasks/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"tasks",
								"1"
							]
						}
					},
					"response": []
